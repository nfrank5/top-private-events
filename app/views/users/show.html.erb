<h1>List of all the events created by <%= current_user.email %>.</h1>
<ul>
  <% current_user.created_events.each do |e| %>
  <li>Event name: <%= e.name %></li>
  <li>Location : <%= e.location %></li>
  <li>Date: <%= e.date %>   </li>
  <br>
  <% end %>
</ul>

<h2>List of all the events <%= current_user.email %> has been invited.</h2>

<table>
  <tr>
    <th>Next Events:</th>
  </tr>
  <tr>
    <td>
      <ul>
        <% current_user.attended_events.where("date >= ?", DateTime.now).each do |e| %>
        <li>Event name: <%= e.name %></li>
        <li>Location : <%= e.location %></li>
        <li>Date: <%= e.date %>   </li>
        <br>
        <% end %>
      </ul>
    </td>
  </tr>
</table>

<table>
  <tr>
    <th>Last Events:</th>
  </tr>
  <tr>
    <td>
      <ul>
        <% current_user.attended_events.where("date <= ?", DateTime.now).each do |e| %>
        <li>Event name: <%= e.name %></li>
        <li>Location : <%= e.location %></li>
        <li>Date: <%= e.date %>   </li>
        <br>
        <% end %>
      </ul>
    </td>
  </tr>
</table>